@model ModulosTaller.Controllers.CompraViewModel

@{
    ViewData["Title"] = "Nueva Compra";
    var categorias = (List<ModulosTaller.Models.CategoriaProducto>)ViewData["Categorias"]!;
}

<div class="card shadow-lg border-0 rounded-4 p-4 bg-white">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-cart-plus text-primary fs-2 me-2"></i>
        <h2 class="text-primary fw-bold mb-0">Registrar Nueva Compra</h2>
    </div>

    <form asp-action="Create" method="post">
        <!-- Selección proveedor -->
        <div class="mb-4">
            <label class="form-label text-dark fw-semibold">Proveedor</label>
            <select asp-for="IdProveedor" class="form-select shadow-sm" required>
                <option value="">-- Seleccione un proveedor --</option>
                @foreach (var prov in (List<ModulosTaller.Models.Proveedore>)ViewData["Proveedores"]!)
                {
                    <option value="@prov.IdProveedor">@prov.NombreProveedor</option>
                }
            </select>
        </div>

        <!-- Productos -->
        <h5 class="mb-3 text-secondary fw-bold"><i class="bi bi-box-seam me-2"></i>Productos de la Compra</h5>
        <div id="productos-container" class="mb-3"></div>

        <button type="button" class="btn btn-outline-primary mb-3 px-4 py-2 rounded-pill shadow-sm" id="add-product">
            <i class="bi bi-plus-circle me-2"></i> Agregar Producto
        </button>

        <!-- Botones acción -->
        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow-sm">
                <i class="bi bi-check-circle me-2"></i> Guardar Compra
            </button>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
                <i class="bi bi-x-circle me-2"></i> Cancelar
            </a>
        </div>
    </form>
</div>

<div id="producto-template" class="d-none">
    <div class="card mb-3 p-3 shadow-sm rounded-3 border-0 bg-light producto-card">
        <div class="row g-3 align-items-end">
            <!-- Producto -->
            <div class="col-md-3">
                <label class="form-label fw-semibold">Nombre Producto</label>
                <input type="text" name="Productos[INDEX].NombreProducto" class="form-control shadow-sm" required />
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Categoría</label>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="nuevaCat-INDEX">
                        <input type="text" name="Productos[INDEX].NombreCategoria" class="form-control shadow-sm" placeholder="Ej: Aceites" />
                    </div>
                </div>
            </div>

            <!-- Precio -->
            <div class="col-md-2">
                <label class="form-label fw-semibold">Precio</label>
                <input type="number" step="0.01" name="Productos[INDEX].Precio" class="form-control shadow-sm" required />
            </div>

            <!-- Cantidad -->
            <div class="col-md-2">
                <label class="form-label fw-semibold">Cantidad</label>
                <input type="number" name="Productos[INDEX].Cantidad" class="form-control shadow-sm" required />
            </div>

            <!-- Botón eliminar -->
            <div class="col-md-1 text-end">
                <button type="button" class="btn btn-danger btn-sm rounded-circle remove-product shadow-sm" data-bs-toggle="tooltip" title="Eliminar producto">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let productIndex = 0;

        function addProduct() {
            let template = document.getElementById('producto-template').innerHTML;

            // Reemplaza "INDEX" en todos los campos y en el input hidden
            template = template.replace(/INDEX/g, productIndex);

            document.getElementById('productos-container').insertAdjacentHTML('beforeend', template);
            productIndex++;
        }

        document.getElementById('add-product').addEventListener('click', addProduct);

        document.getElementById('productos-container').addEventListener('click', function (e) {
            if (e.target.classList.contains('remove-product') || e.target.closest('.remove-product')) {
                e.target.closest('.producto-card').remove();
            }
        });

        // Agregar producto inicial al cargar la página
        addProduct();
    </script>
}

