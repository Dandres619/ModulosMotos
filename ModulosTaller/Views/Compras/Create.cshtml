@model ModulosTaller.Controllers.CompraViewModel

@{
    ViewData["Title"] = "Nueva Compra";
}

<div class="card shadow-sm border-0 rounded-4 p-4">
    <h2 class="text-primary mb-4">Registrar Nueva Compra</h2>

    <form asp-action="Create" method="post">
        <div class="mb-4">
            <label class="form-label text-dark fw-semibold">Proveedor</label>
            <select asp-for="IdProveedor" class="form-select shadow-sm" required>
                <option value="">-- Seleccione un proveedor --</option>
                @foreach (var prov in (List<ModulosTaller.Models.Proveedore>)ViewData["Proveedores"]!)
                {
                    <option value="@prov.IdProveedor">@prov.NombreProveedor</option>
                }
            </select>
        </div>

        <h5 class="mb-3 text-secondary">Productos de la Compra</h5>
        <div id="productos-container" class="mb-3"></div>

        <button type="button" class="btn btn-outline-primary mb-3" id="add-product">
            <i class="bi bi-plus-circle me-2"></i> Agregar Producto
        </button>

        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-success shadow-sm"><i class="bi bi-check-circle me-2"></i> Guardar Compra</button>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary shadow-sm">Cancelar</a>
        </div>
    </form>
</div>

<!-- Template de producto -->
<div id="producto-template" class="d-none">
    <div class="card mb-3 p-3 shadow-sm rounded-3">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Nombre Producto</label>
                <input type="text" name="Productos[INDEX].NombreProducto" class="form-control shadow-sm" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Categoría</label>
                <input type="text" name="Productos[INDEX].NombreCategoria" class="form-control shadow-sm" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">Precio</label>
                <input type="number" step="0.01" name="Productos[INDEX].Precio" class="form-control shadow-sm" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">Cantidad</label>
                <input type="number" name="Productos[INDEX].Cantidad" class="form-control shadow-sm" required />
            </div>
            <div class="col-md-2 text-end">
                <button type="button" class="btn btn-danger remove-product shadow-sm">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let productIndex = 0;

        function addProduct() {
            let template = document.getElementById('producto-template').innerHTML;
            template = template.replace(/INDEX/g, productIndex);
            const container = document.getElementById('productos-container');
            container.insertAdjacentHTML('beforeend', template);
            productIndex++;
        }

        document.getElementById('add-product').addEventListener('click', addProduct);

        document.getElementById('productos-container').addEventListener('click', function(e){
            if(e.target.classList.contains('remove-product') || e.target.closest('.remove-product')) {
                const card = e.target.closest('.card');
                card.remove();
            }
        });

        // Agregar un producto inicial
        addProduct();
    </script>
}

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #343a40;
    }

    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.12);
        }

    .btn-outline-primary {
        border: 2px dashed #4e54c8;
        color: #4e54c8;
    }

        .btn-outline-primary:hover {
            background: #4e54c8;
            color: white;
            border-color: #4e54c8;
        }
</style>
