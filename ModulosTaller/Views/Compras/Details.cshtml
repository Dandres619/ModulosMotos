@model ModulosTaller.Models.Compra

@{
    ViewData["Title"] = "Detalles de la Compra";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">
        Detalles de la Compra
        @if (Model.EstaAnulada)
        {
            <span class="badge bg-danger ms-2">ANULADA</span>
        }
    </h2>

    <a href="@Url.Action("Index")" class="btn btn-outline-secondary shadow-sm">
        <i class="bi bi-arrow-left me-2"></i> Volver
    </a>
</div>

<div class="card shadow-sm rounded-4 border-0">
    <div class="card-body p-4">
        <div class="mb-4">
            <h5 class="fw-bold text-secondary mb-3">Información General</h5>
            <div class="row">
                <div class="col-md-4">
                    <p class="mb-1 text-muted">ID Compra</p>
                    <p class="fw-semibold">@Model.IdCompra</p>
                </div>
                <div class="col-md-4">
                    <p class="mb-1 text-muted">Proveedor</p>
                    <p class="fw-semibold">@Model.IdProveedorNavigation?.NombreProveedor</p>
                </div>
                <div class="col-md-4">
                    <p class="mb-1 text-muted">Fecha</p>
                    <p class="fw-semibold">@Model.FechaCompra.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <h5 class="fw-bold text-secondary mb-3">Productos Comprados</h5>
            <div class="table-responsive rounded-3 shadow-sm">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th>Categoría</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.CompraDetalles)
                        {
                            <tr class="@(Model.EstaAnulada ? "text-decoration-line-through text-muted" : "")">
                                <td>@detalle.IdProductoNavigation?.NombreProducto</td>
                                <td>@detalle.IdProductoNavigation?.IdCategoriaNavigation?.NombreCategoria</td>
                                <td>@detalle.Cantidad</td>
                                <td>@detalle.PrecioUnitario.ToString("C")</td>
                                <td class="fw-semibold text-success">
                                    @((detalle.Cantidad * detalle.PrecioUnitario).ToString("C"))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <div class="p-3 bg-light rounded-3 shadow-sm">
                <h5 class="mb-0 fw-bold">
                    Total: <span class="text-success">@Model.CompraDetalles.Sum(d => d.Cantidad * d.PrecioUnitario).ToString("C")</span>
                </h5>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f6f9;
    }

    .card {
        background: #fff;
    }

    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
    }

    .table tbody tr:hover {
        background-color: #eef4ff;
    }

    .text-primary {
        color: #4e54c8 !important;
    }

    .fw-semibold {
        font-weight: 600;
    }
</style>
