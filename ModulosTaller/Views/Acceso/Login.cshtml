@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <div class="text-center mb-4">
                <i class="bi bi-bicycle text-primary" style="font-size: 2rem;"></i>
                <h4 class="mt-2 text-primary fw-bold">Rafa Motos</h4>
                <small class="text-muted">Panel Administrativo</small>
            </div>

            <h5 class="text-center mb-3 fw-semibold">Iniciar Sesión</h5>
            <p class="text-center text-muted mb-4">Accede a tu cuenta para continuar</p>

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Mensaje"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["Error"]
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label">Usuario</label>
                    <input name="correo" class="form-control" placeholder="admin@rafamotos.com" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input name="clave" type="password" class="form-control" placeholder="Ingrese su contraseña" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-door-open me-1"></i> Iniciar Sesión
                </button>
            </form>

            <div class="text-center mt-3">
                <a href="#" data-bs-toggle="modal" data-bs-target="#modalRecuperar">¿Olvidaste tu contraseña?</a><br />
                <a asp-action="Registro" asp-controller="Acceso">Crear nueva cuenta</a>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ModalRecuperar")