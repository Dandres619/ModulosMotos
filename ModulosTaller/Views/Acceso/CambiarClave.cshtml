@model string
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="text-primary mb-4"><i class="bi bi-lock-fill me-2"></i> Cambiar Contraseña</h4>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="CambiarClave">
                <input type="hidden" name="correo" value="@Model" />
                <div class="mb-3">
                    <label>Nueva contraseña</label>
                    <input name="nueva" type="password" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Confirmar contraseña</label>
                    <input name="confirmar" type="password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-check-circle me-1"></i> Actualizar</button>
            </form>
        </div>
    </div>
</div>