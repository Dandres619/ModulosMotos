@model IEnumerable<ModulosTaller.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ventas</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Venta
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Historial de Ventas</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var venta in Model)
                        {
                            var total = venta.VentaDetalles?.Sum(vd => vd.Cantidad * vd.PrecioUnitario) ?? 0;
                            <tr>
                                <td>@venta.IdVenta</td>
                                <td>@(venta.IdClienteNavigation?.NombreCliente ?? "N/A")</td>
                                <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                                <td>@total.ToString("C")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@venta.IdVenta" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@venta.IdVenta" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@venta.IdVenta" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>