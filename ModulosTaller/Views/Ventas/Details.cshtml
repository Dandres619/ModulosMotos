@model ModulosTaller.Models.Venta
@{
    ViewData["Title"] = "Detalles de Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-eye mr-2"></i>Detalles de Venta #@Model.IdVenta
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.IdVenta" class="btn btn-warning">
                <i class="fas fa-edit mr-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Volver
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-receipt mr-2"></i>Información de la Venta
                    </h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID Venta:</dt>
                        <dd class="col-sm-9">#@Model.IdVenta</dd>

                        <dt class="col-sm-3">Cliente:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IdClienteNavigation != null)
                            {
                                <div>
                                    <strong>@($"{Model.IdClienteNavigation.PrimerNombre} {Model.IdClienteNavigation.PrimerApellido}")</strong><br>
                                    <small class="text-muted">
                                        <i class="fas fa-id-card"></i>
                                        @Model.IdClienteNavigation.TipoDocumento-@Model.IdClienteNavigation.Documento
                                    </small><br>
                                    <small class="text-muted">
                                        <i class="fas fa-phone"></i> @Model.IdClienteNavigation.Telefono
                                    </small>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Cliente no disponible</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Fecha y Hora:</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-calendar text-info mr-1"></i>
                            @Model.FechaVenta.ToString("dd/MM/yyyy")<br>
                            <small class="text-muted">@Model.FechaVenta.ToString("hh:mm tt")</small>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Observaciones))
                        {
                            <dt class="col-sm-3">Observaciones:</dt>
                            <dd class="col-sm-9">@Model.Observaciones</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-dollar-sign mr-2"></i>Resumen de Pago
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        @{
                            var totalVenta = Model.VentaDetalles?.Sum(vd => vd.Cantidad * vd.PrecioUnitario) ?? 0;
                        }
                        <h3 class="text-success font-weight-bold">
                            @totalVenta.ToString("C")
                        </h3>
                        <small class="text-muted">Total de la venta</small>
                    </div>

                    <div class="border-top pt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Productos:</span>
                            <span>@(Model.VentaDetalles?.Count ?? 0)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Unidades totales:</span>
                            <span>@(Model.VentaDetalles?.Sum(vd => vd.Cantidad) ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detalles de productos -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-cubes mr-2"></i>Productos Vendidos
            </h6>
        </div>
        <div class="card-body">
            @if (Model.VentaDetalles != null && Model.VentaDetalles.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.VentaDetalles)
                            {
                                var subtotal = detalle.Cantidad * detalle.PrecioUnitario;
                                <tr>
                                    <td>
                                        @if (detalle.IdProductoNavigation != null)
                                        {
                                            <strong>@detalle.IdProductoNavigation.NombreProducto</strong>
                                            @if (detalle.IdProductoNavigation.IdCategoriaNavigation != null)
                                            {
                                                <br>
                                                <small class="text-muted">
                                                    Categoría: @detalle.IdProductoNavigation.IdCategoriaNavigation.IdCategoria
                                                </small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Producto no disponible</span>
                                        }
                                    </td>
                                    <td>@detalle.Cantidad</td>
                                    <td>@detalle.PrecioUnitario.ToString("C")</td>
                                    <td class="font-weight-bold text-success">
                                        @subtotal.ToString("C")
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="font-weight-bold">
                            <tr>
                                <td colspan="3" class="text-right">TOTAL:</td>
                                <td class="text-success">
                                    @totalVenta.ToString("C")
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-cube fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No hay productos en esta venta</h5>
                </div>
            }
        </div>
    </div>
</div>