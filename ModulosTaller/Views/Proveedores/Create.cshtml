@model ModulosTaller.Models.Proveedore

@{
    ViewData["Title"] = "Crear Proveedor";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold">Crear Proveedor</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary shadow-sm">
        <i class="bi bi-arrow-left me-2"></i> Volver
    </a>
</div>

<div class="card shadow-sm rounded-4 border-0">
    <div class="card-body p-4">
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="NombreProveedor" class="form-label fw-semibold">Nombre del proveedor</label>
                <input asp-for="NombreProveedor" class="form-control shadow-sm rounded-3" />
                <span asp-validation-for="NombreProveedor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Telefono" class="form-label fw-semibold"></label>
                <input asp-for="Telefono" class="form-control shadow-sm rounded-3" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Direccion" class="form-label fw-semibold"></label>
                <input asp-for="Direccion" class="form-control shadow-sm rounded-3" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-gradient-primary shadow-sm mt-3">
                <i class="bi bi-plus-circle me-2"></i> Crear Proveedor
            </button>
        </form>
    </div>
</div>

<style>
    .btn-gradient-primary {
        background: linear-gradient(90deg, #667eea, #764ba2);
        color: #fff !important;
        font-weight: 600;
        border-radius: 12px;
        padding: 0.6rem 1.2rem;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient-primary:hover {
            background: linear-gradient(90deg, #5a67d8, #6b46c1);
            box-shadow: 0 6px 15px rgba(102, 126, 234, 0.4);
            transform: translateY(-2px);
            color: #fff !important;
        }

    .card {
        background: #fff;
    }
</style>
