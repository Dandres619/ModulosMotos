@model IEnumerable<ModulosTaller.Models.Proveedore>

@{
    ViewData["Title"] = "Proveedores";

    var totalProveedores = Model.Count();
    var proveedoresConCompras = Model.Count(p => p.Compras.Any());
    var proveedoresSinCompras = totalProveedores - proveedoresConCompras;

    var topProveedores = Model
        .OrderByDescending(p => p.Compras.Count)
        .Take(3)
        .ToList();
}

<!-- HEADER DASHBOARD -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card card-stat shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="icon-box bg-primary text-white me-3">
                    <i class="bi bi-people fs-3"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Total Proveedores</h6>
                    <h4 class="fw-bold">@totalProveedores</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card card-stat shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="icon-box bg-success text-white me-3">
                    <i class="bi bi-cart-check fs-3"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Con Compras</h6>
                    <h4 class="fw-bold text-success">@proveedoresConCompras</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card card-stat shadow-sm border-0">
            <div class="card-body d-flex align-items-center">
                <div class="icon-box bg-danger text-white me-3">
                    <i class="bi bi-x-circle fs-3"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Sin Compras</h6>
                    <h4 class="fw-bold text-danger">@proveedoresSinCompras</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- PROVEEDORES DESTACADOS -->
<div class="row mb-4">
    @foreach (var p in topProveedores)
    {
        <div class="col-md-4 mb-3">
            <div class="card card-stat shadow-sm border-0 border-start-4 border-primary">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Proveedor destacado</h6>
                    <h5 class="fw-bold">@p.NombreProveedor</h5>
                    <p class="mb-1"><i class="bi bi-phone me-2"></i>@(p.Telefono ?? "Sin teléfono")</p>
                    <p class="mb-0"><i class="bi bi-geo-alt me-2"></i>@(p.Direccion ?? "Sin dirección")</p>
                    <span class="badge-total mt-2">
                        Compras: @p.Compras.Count
                    </span>
                </div>
            </div>
        </div>
    }
</div>

<!-- BOTÓN CREAR -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary fw-bold">Listado de Proveedores</h2>
    <a href="@Url.Action("Create")" class="btn btn-gradient-primary shadow-sm">
        <i class="bi bi-plus-circle me-2"></i> Nuevo Proveedor
    </a>
</div>

<!-- TABLA PROVEEDORES -->
<div class="table-responsive shadow-lg rounded-4 overflow-hidden">
    <table class="table table-hover align-middle mb-0 table-modern">
        <thead class="table-header sticky-top">
            <tr>
                <th><i class="bi bi-hash me-1 text-secondary"></i> ID</th>
                <th><i class="bi bi-person-badge me-1 text-secondary"></i> Nombre</th>
                <th><i class="bi bi-telephone me-1 text-secondary"></i> Teléfono</th>
                <th><i class="bi bi-geo-alt me-1 text-secondary"></i> Dirección</th>
                <th><i class="bi bi-box-seam me-1 text-secondary"></i> Compras</th>
                <th><i class="bi bi-gear me-1 text-secondary"></i> Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proveedor in Model)
            {
                <tr>
                    <td>
                        <span class="fw-bold">#@proveedor.IdProveedor</span>
                        <span class="badge-status @(proveedor.Compras.Any() ? "badge-activa" : "badge-inactiva") ms-2">
                            @(proveedor.Compras.Any() ? "Con Compras" : "Sin Compras")
                        </span>
                    </td>
                    <td>@proveedor.NombreProveedor</td>
                    <td>@(proveedor.Telefono ?? "-")</td>
                    <td>@(proveedor.Direccion ?? "-")</td>
                    <td>@proveedor.Compras.Count</td>
                    <td>
                        <a href="@Url.Action("Details", "Proveedores", new { id = proveedor.IdProveedor })"
                           class="btn btn-sm btn-info shadow-sm" title="Ver Detalles">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="@Url.Action("Edit", "Proveedores", new { id = proveedor.IdProveedor })"
                           class="btn btn-sm btn-warning shadow-sm" title="Editar">
                            <i class="bi bi-pencil"></i>
                        </a>
                        @if (proveedor.Compras.Count == 0)
                        {
                            <button type="button" class="btn btn-sm btn-danger shadow-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#eliminarModal"
                                    data-id="@proveedor.IdProveedor"
                                    title="Eliminar Proveedor">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- MODAL ELIMINAR -->
<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="eliminarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-4">
            <div class="modal-header bg-danger text-white rounded-top-4">
                <h5 class="modal-title fw-bold" id="eliminarModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i> Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fs-5">¿Está seguro de eliminar este proveedor?</p>
                <small class="text-muted">Esta acción no se puede deshacer.</small>
            </div>
            <div class="modal-footer justify-content-center">
                <form id="eliminarForm" method="post" asp-action="Delete" asp-controller="Proveedores">
                    <input type="hidden" name="id" id="proveedorId" />
                    <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
                        Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const eliminarModal = document.getElementById('eliminarModal');
    eliminarModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const proveedorId = button.getAttribute('data-id');
        eliminarModal.querySelector('#proveedorId').value = proveedorId;
    });
</script>

<style>
    /* Cards estadísticas */
    .card-stat {
        border-radius: 1rem;
        transition: all 0.3s ease-in-out;
    }

        .card-stat:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }

    /* Iconos en cards */
    .icon-box {
        width: 55px;
        height: 55px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Tabla moderna */
    .table-modern {
        border-collapse: separate;
        border-spacing: 0 8px;
    }

        .table-modern thead {
            background: linear-gradient(90deg, #f0f2ff, #e9ecff);
            font-weight: 600;
            color: #4e54c8;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        .table-modern tbody tr {
            background: #fff;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .table-modern tbody tr:hover {
                background: #f9faff;
                transform: scale(1.01);
                box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            }

        .table-modern td, .table-modern th {
            padding: 1rem;
        }

    /* Badges */
    .badge-status {
        font-size: 0.7rem;
        padding: 0.3rem 0.6rem;
        border-radius: 8px;
        font-weight: 600;
    }

    .badge-activa {
        background: linear-gradient(90deg, #28a745, #5dd98d);
        color: white;
    }

    .badge-inactiva {
        background: linear-gradient(90deg, #dc3545, #ff6b6b);
        color: white;
    }

    /* Row inactiva */
    .row-inactivo {
        text-decoration: line-through;
        opacity: 0.7;
        background: #fff5f5 !important;
    }

    /* Botón crear */
    .btn-gradient-primary {
        background: linear-gradient(90deg, #667eea, #764ba2);
        color: #fff !important;
        font-weight: 600;
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        transition: all 0.3s ease-in-out;
        border: none;
    }

        .btn-gradient-primary:hover {
            background: linear-gradient(90deg, #5a67d8, #6b46c1);
            color: #fff !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(102, 126, 234, 0.4);
        }

    /* Badge top proveedor */
    .badge-total {
        background: linear-gradient(90deg, #007bff, #00c6ff);
        color: white;
        padding: 5px 12px;
        border-radius: 10px;
        font-weight: bold;
        font-size: 0.85rem;
        display: inline-block;
        box-shadow: 0 2px 6px rgba(0,0,0,0.15);
    }

    /* Card top proveedor */
    .card-stat.border-start-4 {
        border-left-width: 4px !important;
    }

</style>