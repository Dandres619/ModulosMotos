@model ModulosTaller.Models.Permiso

<form asp-action="CrearPermiso" asp-controller="Roles" method="post">
    <div class="mb-3">
        <label asp-for="NombrePermiso" class="form-label fw-semibold"></label>
        <input asp-for="NombrePermiso" class="form-control" placeholder="Ej: Editar usuarios" />
        <span asp-validation-for="NombrePermiso" class="text-danger"></span>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-check-circle"></i> Guardar Permiso
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}