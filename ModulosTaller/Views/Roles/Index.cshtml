@model List<ModulosTaller.Models.Role>
@{
    ViewData["Title"] = "Gestión de Roles";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold" style="color: #0d6efd;">
            <i class="bi bi-person-badge-fill me-2" style="color: #0d6efd;"></i> Gestión de Roles (@Model.Count)
        </h4>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalCrearRol">
                <i class="bi bi-plus-circle"></i> Nuevo Rol
            </button>
            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalCrearPermiso">
                <i class="bi bi-shield-plus"></i> Crear Permiso
            </button>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> No hay roles registrados aún.
        </div>
    }
    else
    {
        @foreach (var rol in Model)
        {
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 text-primary">@rol.NombreRol</h5>
                        <p class="mb-0 text-muted">@rol.Descripcion</p>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-sm toggle-estado @(rol.Activo ? "btn-outline-success" : "btn-outline-secondary")"
                                data-id="@rol.IdRol"
                                data-estado="@rol.Activo">
                            @(rol.Activo ? "Activo" : "Inactivo")
                        </button>
                        <button class="btn btn-sm btn-outline-info btn-detalles" data-id="@rol.IdRol" title="Ver">
                            <i class="bi bi-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-primary btn-editar" data-id="@rol.IdRol" title="Editar">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger btn-eliminar" data-id="@rol.IdRol" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        }

        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled"><a class="page-link">Anterior</a></li>
                <li class="page-item active"><a class="page-link">1</a></li>
                <li class="page-item"><a class="page-link">2</a></li>
                <li class="page-item"><a class="page-link">3</a></li>
                <li class="page-item"><a class="page-link">Siguiente</a></li>
            </ul>
        </nav>
    }
</div>

<!-- Modal: Crear Rol -->
<div class="modal fade" id="modalCrearRol" tabindex="-1" aria-labelledby="modalCrearRolLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalCrearRolLabel">Crear Rol</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_Create", new ModulosTaller.Models.Role())
            </div>
        </div>
    </div>
</div>

<!-- Modal: Crear Permiso -->
<div class="modal fade" id="modalCrearPermiso" tabindex="-1" aria-labelledby="modalCrearPermisoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalCrearPermisoLabel">Crear Permiso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_CreatePermiso", new ModulosTaller.Models.Permiso())
            </div>
        </div>
    </div>
</div>

<!-- Modales dinámicos -->
<div class="modal fade" id="modalEditarRol" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body" id="contenidoEditarRol"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalDetallesRol" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="contenidoDetallesRol"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminarRol" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="contenidoEliminarRol"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".toggle-estado").click(function () {
                var btn = $(this);
                var id = btn.data("id");
                var estadoActual = btn.data("estado");
                var nuevoEstado = !estadoActual;

                $.ajax({
                    url: "/Roles/CambiarEstado",
                    method: "POST",
                    data: { id: id, activo: nuevoEstado },
                    success: function () {
                        btn.data("estado", nuevoEstado);
                        btn.removeClass("btn-outline-success btn-outline-secondary");
                        btn.addClass(nuevoEstado ? "btn-outline-success" : "btn-outline-secondary");
                        btn.text(nuevoEstado ? "Activo" : "Inactivo");
                    },
                    error: function () {
                        alert("Error al cambiar el estado del rol.");
                    }
                });
            });

            $(".btn-editar").click(function () {
                var id = $(this).data("id");
                $("#contenidoEditarRol").load("/Roles/Edit/" + id);
                $("#modalEditarRol").modal("show");
            });

            $(".btn-detalles").click(function () {
                var id = $(this).data("id");
                $("#contenidoDetallesRol").load("/Roles/Details/" + id);
                $("#modalDetallesRol").modal("show");
            });

            $(".btn-eliminar").click(function () {
                var id = $(this).data("id");
                $("#contenidoEliminarRol").load("/Roles/Delete/" + id);
                $("#modalEliminarRol").modal("show");
            });
        });
    </script>
    </div>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link">Anterior</a></li>
            <li class="page-item active"><a class="page-link">1</a></li>
            <li class="page-item"><a class="page-link">2</a></li>
            <li class="page-item"><a class="page-link">3</a></li>
            <li class="page-item"><a class="page-link">Siguiente</a></li>
        </ul>
    </nav>
    </div>
}