@model ModulosTaller.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Detalles del Cliente</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Información del Cliente</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreCliente)</dd>

                <dt class="col-sm-3">Correo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>
            </dl>

            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.IdCliente" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>