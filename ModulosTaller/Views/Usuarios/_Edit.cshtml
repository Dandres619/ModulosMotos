@model ModulosTaller.Models.Usuario

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdUsuario" />

    <h5 class="text-primary mb-3">
        <i class="bi bi-pencil-square me-2"></i> Editar Usuario
    </h5>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" required />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Apellido" class="form-label"></label>
            <input asp-for="Apellido" class="form-control" required />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" required />
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Barrio" class="form-label"></label>
            <input asp-for="Barrio" class="form-control" required />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Barrio" class="form-label"></label>
            <input asp-for="Barrio" class="form-control" required />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="FechaNacimiento" class="form-label"></label>
        <input asp-for="FechaNacimiento" type="date" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="IdRol" class="form-label">Rol</label>
        <select asp-for="IdRol" class="form-select" asp-items="new SelectList(ViewBag.Roles)" IdRol", "NombreRol" )" required>
            <option value="">Seleccione un rol...</option>
        </select>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save me-1"></i> Guardar Cambios
        </button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-1"></i> Cancelar
        </button>
    </div>
</form>